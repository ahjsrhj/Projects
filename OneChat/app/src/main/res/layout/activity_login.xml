<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_activity_bg">

    <EditText
        android:id="@+id/activity_login_et_username"
        style="@style/TextView.Large"
        android:hint="@string/login_null_name_tip"
        android:maxLength="50"
        android:layout_marginTop="170dp"
        />
    <EditText
        android:id="@+id/activity_login_et_password"
        style="@style/TextView.Large"
        android:hint="@string/login_null_pass_tip"
        android:maxLength="50"
        android:inputType="textPassword"
        android:layout_below="@+id/activity_login_et_username"
        android:layout_marginTop="5dp"

        />



    <Button
        android:id="@+id/activity_login_btn_login"
        style="@style/Button.Larger"
        android:layout_marginTop="60dp"
        android:background="@drawable/login_btn_bg"
        android:text="@string/login"
        android:layout_below="@+id/activity_login_et_password"

        />
</RelativeLayout>
