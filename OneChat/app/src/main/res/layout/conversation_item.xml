<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:padding="5dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/conversation_item_layout_avatar"
        android:layout_width="50dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/conversation_item_iv_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/chat_default_user_avatar" />

        <TextView
            android:id="@+id/conversation_item_tv_unread"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@+id/conversation_item_iv_avatar"
            android:layout_alignTop="@+id/conversation_item_iv_avatar"
            android:layout_marginTop="-10dp"
            android:gravity="center"
            android:textColor="#ff0000"
            android:textSize="10.0dip" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/conversation_item_layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/common_horizontal_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:layout_gravity="top"
            android:gravity="top">
            <TextView
                android:id="@+id/conversation_item_tv_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="25.0dip"
                android:ellipsize="end"
                android:gravity="left|center"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/conversation_item_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="25.0dip"
                android:layout_marginRight="10dip"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="10.0sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/conversation_item_tv_message"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:ellipsize="end"
            android:gravity="top"
            android:singleLine="true"
            android:textSize="15.0sp" />
    </LinearLayout>
</LinearLayout>